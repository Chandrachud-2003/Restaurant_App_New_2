<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/displayItemRelativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp">

    <ImageView
        android:id="@+id/item_Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icons8_banana"
        android:background="@drawable/banana_bg"

        android:padding="10dp"
        />

    <TextView
        android:id="@+id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical"
        android:layout_toEndOf="@id/item_Image"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/itemWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="2.5 kg"
            android:textColor="@color/black"
            android:textSize="25sp"

            android:textStyle="bold" />

        <com.github.lguipeng.library.animcheckbox.AnimCheckBox

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:padding="4dp"
            app:checked="false"
            app:circle_color="@color/blueviolet"
            app:stroke_color="@color/blueviolet"
            app:stroke_width="4dp" />

    </LinearLayout>



</RelativeLayout>